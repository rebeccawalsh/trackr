<body>
<!--HOME-->
<div data-role="page" id="home" data-add-back-btn="false">
	<!--panel-->
	<div data-role="panel" id="mypanel" data-position="right" data-display="reveal" data-theme="b">
		<div data-role="button" data-icon="cancel"></div>
		<ul data-role="listview" data-theme="b">
    		<li data-icon="home"><a href="#">Home</a></li>   		
   			<li data-icon="clock"><a href="./reminders">Reminders</a></li>
    		<li data-icon="delete"><a href="#signoutprompt">Sign Out</a></li>
		</ul></br>
	</div><!-- /panel -->

	<div data-role="header" data-theme="b">
		<a href="#signoutprompt" data-rel="dialog" data-icon="carat-l" data-iconpos="notext" class="ui-btn-left" data-transition="none" data-direction="reverse"></a>	
		<h1>TR&#916;CK</h1>
		<a href="#mypanel" data-icon="bars" data-iconpos="notext" class="showMenu"></a>
	</div>
	
	<div data-role="content" data-theme="c">
		<div class="ui-grid-a">
			<div class="ui-block-a"><h4>Your Diaries</h4></div>
		</div>
		
 		<a href="#newdiary" data-rel="popup" data-position-to="window" class="ui-btn ui-corner-all ui-icon-plus ui-btn-icon-left ui-btn-a" data-transition="pop">Create New Diary</a>
 		<div data-role="popup" id="newdiary" data-theme="a" class="ui-corner-all">
 			<a href="#" data-rel="back" class="ui-btn ui-corner-all ui-shadow ui-btn-a ui-icon-delete ui-btn-icon-notext ui-btn-right">Close</a>
 
 			<form id="DiaryForm" role="form" method="get" action="/adddiary" >
 			<div style="padding:10px 20px;">
 				<h4>Diary Name</h4><input type="text" id="diaryname" name="diaryname" placeholder="e.g. 'BHA Patch Test'">
 				<input type="submit" id="submitBtn" class="btn btn-default" value="Create Diary" ></input>
 			</div>
 			</form>
 		</div>


		{{#each diaries}}
		<a href="./diary" data-role="button" data-theme="b" data-transition="slide" data-icon="book"> {{diaryname}} </a>
		{{/each}}

	</div><!-- /content -->

	<div data-role="footer" data-id="fool" data-position="fixed" data-theme="b">
	</div><!-- /footer -->

</div><!-- /page -->


<!--SIGNOUT PROMPT-->
<div data-role="page" id="signoutprompt">
	<div data-role="header" data-theme="b">
		<h3>Sign Out?</h3>
	</div>
	<div data-role="content" data-theme="c">
		Are you sure you want to sign out?
			<a href="./" data-role="button" data-theme="b">Yes, sign me out</a>
			<a href="./home" data-role="button" data-theme="c">Cancel</a>
	</div>
</div>
<!--/SIGNOUT PROMPT-->


