<!--REMINDERS-->
<div data-role="page" id="reminders" data-add-back-btn="true">
	<!--panel-->
	<div data-role="panel" id="mypanel" data-position="right" data-display="reveal" data-theme="b">
		<ul data-role="listview" data-theme="b">
    		<li data- icon="home"><a href="./home">Home</a></li>
   			<li data-icon="clock"><a href="#">Reminders</a></li>
    		<li data-icon="delete"><a href="#signoutprompt">Sign Out</a></li>
		</ul><br/>
	</div><!-- /panel -->

	<div data-role="header" data-theme="b" data-add-back-btn="true">
		<h1>Reminders</h1>
		<a href="#mypanel" data-role="button" data-icon="bars" data-iconpos="notext" class="showMenu ui-btn-right"></a>
	</div>
	
	<div data-role="content" data-theme="c">	
	<!--on/off button-->
		<div class="ui-grid-a" id="fuckthis">
			<div class="ui-block-a" data-role="fieldcontain" data-type="horizontal">
				<label for="flip-5"><h4>Diary 1</h4></label>
				</div>
			<div class="ui-block-b">
				<strong>Turn Reminders:</strong>
				<select name="flip-5" id="flip-5" data-role="slider" data-theme="c" data-track-theme="a" data-mini="true">
						<option value="off"> Off</option>
						<option value="on"> On</option>
				</select>
			</div>
		</div><!--/dairy1 button-->

	
	   <fieldset data-role="controlgroup" data-type="horizontal" >
		   <legend><p>Set Reminder Time:</p></legend>

	    	<label for="select-choice-month">Month</label>
			<select name="select-choice-week" id="select-choice-week">
				<option value="Daily">Daily</option>
				<option value="Weekly">Weekly</option>
				<option value="Monthly">Monthly</option>
			<!-- etc. -->
			</select>

		<label for"select-choice-day">Day</label>
		<select name="select-choice-day" id="select-choice-day">
			<option>Day</option>
			<option value="Sun">Sunday</option>
			<option value="Mon">Monday</option>
			<option value="Tues">Tuesday</option>
			<option value="Wed">Wednesday</option>
			<option value="Thurs">Thursday</option>
			<option value="Fri">Friday</option>
			<option value="Sat">Saturday</option>
		</select>

		<label for="select-choice-time">Year</label>
		<select name="select-choice-time" id="select-choice-time">
			<option>Time</option>
			<option value="1">1</option>
			<option value="2">2</option>
			<option value="3">3</option>
			<option value="4">4</option>
			<option value="5">5</option>
			<option value="6">6</option>
			<option value="7">7</option>
			<option value="8">8</option>
			<option value="9">9</option>
			<option value="10">10</option>
			<option value="11">11</option>
			<option value="12">12</option>
			<!-- etc. -->
		</select>

		<label for="select-choice-ampm">AM</label>
		<select name="select-choice-ampm" id="select-choice-ampm">
			<option value>AM</option>
			<option value>PM</option>
		</select>

		</fieldset> <!--/date selector field-->
	
	<div  class="ui-grid-a"> 		
		<fieldset data-role="controlgroup" data-type="horizontal" >
			<legend>Via:</legend>
				<input type="radio" name="radio-choice" id="radio-choice-1" value="choice-1"/>
				<label for="radio-choice-1">text</label>

				<input type="radio" name="radio-choice" id="radio-choice-2" value="choice-2"  />
				<label for="radio-choice-2">email</label>
		</fieldset>



	</div> <!--/text/email-->
	</div><!-- /content -->

	<div data-role="footer" data-position="fixed" data-theme="b">
		<div data-role="navbar" data-theme="a" data-iconpos="left">
			<ul>
				<li><a href="./home" data-transition="none" data-icon="carat-u">Close</a></li>
			</ul>
		</div>
	</div><!-- /footer -->




</div><!-- /page -->

<!--SIGNOUT PROMPT-->
<div data-role="page" id="signoutprompt">
	<div data-role="header" data-theme="b">
		<h3>Sign Out?</h3>
	</div>
	<div data-role="content" data-theme="c">
		Are you sure you want to sign out?
			<a href="./" data-role="button" data-theme="b">Yes, sign me out</a>
			<a data-rel="back" data-role="button" data-theme="c">Cancel</a>
	</div>
</div>
