<div data-role="page" id="register" data-add-back-btn="false">
	<!--Header-->
	<div data-role="header" data-theme="b" data-add-back-btn="true">
		<h1>Create an Account</h1>
				<a href="#info" data-icon="info" data-iconpos="notext" class="ui-btn-right"></a>
	</div>
	<!--/Header-->

	<!--Content-->
	<div data-role="content" data-theme="c">
		<h3>Registration Details</h3>
		<!--Registration form-->
		<input type="text" required name="first_name" placeholder="First Name">
		<input type="text" required name="last_name" placeholder="Last Name">
		<input type="email" required name="email" placeholder="Email">
		<input type="password" required name="password" placeholder="Password">
		<input type="password" required name="confirm_password" placeholder="Confirm Password">
		<a href="./home" data-role="button" data-transition="slideup" data-ajax="false">Submit</a>
	</div>
	<!--/Content-->

	<!--Footer-->
	<div data-role="footer" data-id="fool" data-position="fixed" data-theme="b">
		<div data-role="navbar" data-theme="a" data-iconpos="left">
			<ul>
				<li><a href="./" class="ui-btn-active ui-state-persist" data-ajax="false" data-transition="slideup" data-direction="reverse" data-icon="carat-d">Cancel</a></li>
			</ul>
		</div> 
	</div>
	<!--/Footer -->
</div>
